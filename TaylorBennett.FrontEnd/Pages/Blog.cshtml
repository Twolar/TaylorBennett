@page
@model BlogModel
@{
    ViewData["Title"] = "Blog";
}

<div class="text-center">
    <h1 class="display-4">Blog</h1>
    <p>Welcome to my personal blog, here I mainly post a day summary of what I have learnt each day. 
        Because I believe it helps me to consolidate any learnings from the day as it offers an opportunity 
        to summarise and reflect on any learning right before sleeping.
    </p>
</div>


<div class="row justify-content-center">
@foreach (var blogpost in Model.BlogPosts.Reverse())
{ 
     <div class="w-75 p-3">
         <div class="card shadow session h-100">
             <div class="card-header">@blogpost.BlogPostTitle</div>
             <div class="card-body">
                 <h5 class="card-title"><a>@blogpost.BlogPostBody</a></h5>
             </div>
             <div class="card-footer">
                 <ul class="list-inline mb-0">
                     <li class="list-inline-item">
                         <a>@blogpost.Author</a>
                     </li>
                     <li class="list-inline-item">
                         <a>@blogpost.BlogPostDate.Date.ToString("dd MMM yyyy")</a>
                     </li>
                 </ul>
             </div>
         </div>
     </div>
}
</div>
